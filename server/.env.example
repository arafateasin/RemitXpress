# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/remitxpress

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_make_it_very_long_and_random

# Blockchain Configuration
RPC_URL=http://localhost:8545
PRIVATE_KEY=your_private_key_here
REMITTANCE_CONTRACT_ADDRESS=0x...
REMITTANCE_CONTRACT_ABI=[]

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Session Secret for OAuth
SESSION_SECRET=your-super-secret-session-key

# KYC Provider (e.g., SumSub)
KYC_PROVIDER_API_KEY=your_kyc_provider_api_key
KYC_PROVIDER_SECRET=your_kyc_provider_secret

# Logging
LOG_LEVEL=info
